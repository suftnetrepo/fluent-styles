{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": true,
		"jsx": "react", // Add this line to handle JSX
		"jsxFactory": "React.createElement", // Optional: Specify JSX factory function if using custom one
		"jsxFragmentFactory": "React.Fragment" // Optional: Specify JSX fragment factory function if using custom one
	},
	"include": ["src"]
}
